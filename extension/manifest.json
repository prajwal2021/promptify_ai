{
    "manifest_version": 3,
    "name": "AI Writing Assistant",
    "version": "1.0",
    "description": "Uses AI to improve your writing anywhere on the web.",
    "permissions": [ "storage" ],
    "host_permissions": [ "http://localhost:8000/*" ],
    "background": { "service_worker": "background.js" },
    "content_scripts": [
      {
        "matches": [ "<all_urls>" ],
        "js": [ "content.js" ]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
